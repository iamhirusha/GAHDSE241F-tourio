<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedbackpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/profile_page_top"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="40dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_profilepic_01"
            android:background="@drawable/shape_rounded_button"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Traveler!"
                android:textSize="28dp"
                android:textStyle="bold"
                android:id="@+id/FeedbackTitle"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View your tour details"
                android:textSize="16dp"
                android:textColor="#7D7D7D"
                android:id="@+id/subText"
                android:layout_below="@+id/FeedbackTitle"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/profile_page_top">

        <Button
            android:id="@+id/travelerLogoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Log out"
            android:drawableLeft="@drawable/ic_logout"
            android:textColor="@color/white"
            android:backgroundTint="#1F1F1F"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Ongoing Tours"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Popular Tours Listing-->

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="220dp"
                    android:layout_marginEnd="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:clipToOutline="true">

                        <ImageView
                            android:id="@+id/tour_image2"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/img_sigiriya_1"
                            android:scaleType="centerCrop"
                            android:clipToOutline="true"
                            tools:ignore="DuplicateIds" />

                        <!-- Title Below the Image -->
                        <TextView
                            android:id="@+id/home_item_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tour_image2"
                            android:layout_marginTop="8dp"
                            android:text="Sigiriya : Ongoing"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/home_item_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/home_item_title"
                            android:text="Matale / Dambulla Area"
                            android:textSize="11sp"
                            android:textColor="#888888"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/home_item_subtitle"
                            android:text="64% Complete"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#1D1D1D" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed Tours"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

    </LinearLayout>

</RelativeLayout>